<div class="list-item p-3 border rounded shadow-sm mb-3 <%= isSimple ? 'simple' : '' %>">
    <div class="row align-items-center">
        
        <!-- Book Card -->
        <div class="<%= isSimple ? 'col-12' : 'col-md-4' %>">
            <img src="https://cdn.pixabay.com/photo/2022/10/22/13/41/paris-7539257_640.jpg" style="width: 18rem;">
        </div>

        <!-- Book Info -->
        <div class="<%= isSimple ? 'col-12 text-center mt-2' : 'col-md-5' %>">
            <h5 class="fw-bold">Title</h5>
            <p class="text-muted">by Author</p>
            <div class="d-flex align-items-center">
                <!-- Star rating -->
                <div class="me-2">
                    <% for(let i = 0; i < 5; i++) { %>
                        <i class="bi bi-star-fill text-warning"></i>
                    <% } %>
                </div>
                <span class="fw-bold">3.7</span>
                <span class="text-muted ms-1">12 ratings</span>
            </div>
            <% if (!isSimple) { %>
                <p class="mt-2 text-muted">
                    This is the description.
                </p>
            <% } %>
        </div>

        <!-- Action Buttons -->
        <div class="<%= isSimple ? 'col-12 mt-2 text-center' : 'col-md-3 text-md-end' %>">
            <div class="btn-group">
                <button type="button" class="btn btn-success">Want to Read</button>
                <button type="button" class="btn btn-success dropdown-toggle dropdown-toggle-split" data-bs-toggle="collapse" data-bs-target="#actions-collapsediv" aria-expanded="false">
                    <span class="visually-hidden">Toggle Actions</span>
                </button>
            </div>

            <!-- Collapsible Action List -->
            <div class="collapse mt-2" id="actions-collapsediv">
                <div class="list-group">
                    <a href="#" class="list-group-item list-group-item-action">Currently Reading</a>
                    <a href="#" class="list-group-item list-group-item-action">Read</a>
                    <a href="#" class="list-group-item list-group-item-action">Remove</a>
                </div>
            </div>
        </div>

    </div>
</div>
