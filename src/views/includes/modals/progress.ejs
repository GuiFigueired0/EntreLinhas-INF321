  <!-- Modal -->
  <div id="progressModal" class="modalDiv">

    <!-- Modal content -->
    <div class="modalContent">
      <div class="container my-5">
        <!-- Top Div: Book Info -->
        <div class="card p-3 mb-4 shadow">
          <h3 class="card-title">Book Title</h3>
          <p class="card-text mb-0"><strong>Author:</strong> John Doe</p>
          <p class="card-text mb-0"><strong>Year of Release:</strong> 2025</p>
          <p class="card-text"><strong>Number of Pages:</strong> 350</p>
        </div>
      
        <!-- Form Div: Progress Input -->
        <div class="card p-4 mb-4 shadow">
          <form id="bookReviewForm">
            <div class="mb-3">
              <label for="reviewText" class="form-label">Write your commentary:</label>
              <textarea class="form-control" id="reviewText" rows="4" placeholder="What do you think so far?" required></textarea>
            </div>
            <div class="mb-3">
              <label for="pagesRead" class="form-label">Number of pages read:</label>
              <input type="number" class="form-control" id="pagesRead" placeholder="Enter pages read" required />
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
          </form>
        </div>
      
        <!-- Bottom Div: Progress Log -->
        <div class="card p-3 shadow">
          <h4 class="card-title mb-3">Reading Progress</h4>
          <div class="row">
            <!-- Vertical Progress Bar 1 -->
            <div class="col-md-2 text-center">
              <div class="progress" style="height: 150px; width: 20px;">
                <div
                  class="progress-bar bg-success"
                  role="progressbar"
                  style="height: 60%; width: 100%;"
                  aria-valuenow="60"
                  aria-valuemin="0"
                  aria-valuemax="100"
                ></div>
              </div>
              <small class="d-block mt-2">60% - Great so far!</small>
            </div>
      
            <!-- Vertical Progress Bar 2 -->
            <div class="col-md-2 text-center">
              <div class="progress" style="height: 150px; width: 20px;">
                <div
                  class="progress-bar bg-warning"
                  role="progressbar"
                  style="height: 30%; width: 100%;"
                  aria-valuenow="30"
                  aria-valuemin="0"
                  aria-valuemax="100"
                ></div>
              </div>
              <small class="d-block mt-2">30% - A bit slow in the middle.</small>
            </div>
      
            <!-- Vertical Progress Bar 3 -->
            <div class="col-md-2 text-center">
              <div class="progress" style="height: 150px; width: 20px;">
                <div
                  class="progress-bar bg-danger"
                  role="progressbar"
                  style="height: 15%; width: 100%;"
                  aria-valuenow="15"
                  aria-valuemin="0"
                  aria-valuemax="100"
                ></div>
              </div>
              <small class="d-block mt-2">15% - Just started.</small>
            </div>
      
            <!-- Add additional logs here -->
          </div>
        </div>
      </div>
      
    </div>
  
  </div>