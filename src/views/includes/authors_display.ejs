<div class="container">
    <% authors.forEach(author_info => { %>
        <div class="col-12 col-sm-6 col-md-4 col-lg-3 mb-3">
            <div class="d-flex align-items-center p-3 bg-light rounded shadow-sm">
                <img src="<%= author_info.image_url %>" class="rounded-circle" width="50" height="50" />
                <div>
                    <a href="/profile/view/<%= author_info._id %>">
                        <h3 class="ms-3 mb-0"><%= author_info.name %></h3>
                    </a>
                    <p class="card-text"><strong>Number of books:</strong><%= author_info.number_of_books %></p>
                    <p class="card-text"><strong>Description:</strong><%= author_info.description %></p>
                </div>
            </div>
        </div>
    <% }) %>
</div>